package onlineBookStore;

import java.util.ArrayList;
import java.util.Scanner;


public class BookList {
	static Scanner sc=new Scanner(System.in);
 
	ArrayList<Book> books=new ArrayList<Book>();
	public BookList() {
		books.add(new Book(1,"agni","apj",100));
		books.add(new Book(2,"b","a",99.99));
		books.add(new Book(3,"c","pj",80));
		books.add(new Book(4,"d","ap",79));
		books.add(new Book(5,"e","aj",200));
	}
	
	public void buy(){
		
		
	}
	public void displayBooks() {
		if(books.size() == 0) {
			System.out.println("No Books Available");
		}
		
		for(Book b: books) {
			System.out.println(b);
		}
	}
	
	public void addBook() {
		System.out.println("Enter Book Id: ");
		int bookId=sc.nextInt();
		System.out.println("Enter Book Name: ");
		String bookName=sc.next();
		System.out.println("Enter Book Author: ");
		String author=sc.next();
		System.out.println("Enter Book Price: ");
		double price=sc.nextDouble();
		Book b=new Book(bookId,bookName,author,price);
		books.add(b);	
	}
	
	public void removeBook() {
		if(books.size() > 0) {
			books.clear();
			System.out.println("All books deleted");
		}else {
			System.out.println("No books found");
		}
	}
	
}
